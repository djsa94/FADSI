@model IEnumerable<ProyectoProgramado3.Models.SitiosModel>

@{
    ViewBag.Title = "Index";
}
<title>FADSI</title>

<!-- Bootstrap core CSS -->
<link href="~/Design/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

